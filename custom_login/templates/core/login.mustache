{{! Ghi đè template core/login }}
<style>
    /* CSS cục bộ cho Form Login */
    .form-control {
        background-color: #eef2f7 !important;
        border: 1px solid transparent !important; /* Border trong suốt */
        border-radius: 8px !important;
        padding: 12px 15px !important;
        font-size: 14px !important;
        height: auto !important;
        margin-bottom: 12px !important;
    }
    .form-control:focus {
        box-shadow: 0 0 0 3px rgba(183, 28, 28, 0.15) !important; /* Box shadow nhẹ khi focus */
        border-color: #b71c1c !important; /* Border màu đỏ */
        background: #fff !important;
    }
    .btn-login {
        background-color: #b71c1c !important;
        border: none !important;
        padding: 12px !important;
        font-weight: 600 !important;
        border-radius: 8px !important;
        width: 100%;
        font-size: 16px;
    }
    .btn-login:hover { background-color: #9e1616 !important; }
    .btn-microsoft {
        background-color: #0067b8; color: white; padding: 12px;
        border-radius: 8px; font-weight: 600; text-decoration: none;
        display: block; width: 100%; text-align: center; font-size: 16px;
        transition: background-color 0.3s ease;
    }
    .btn-microsoft:hover { background-color: #005da6; color: white; }
    label { display: block; text-align: left; font-size: 13px; font-weight: 600; color: #555; margin-bottom: 6px; }

    .form-check-label { font-weight: normal !important; color: #666 !important; }
    .forgot-password-link {
        color: #b71c1c; font-size: 13px; text-decoration: none; font-weight: 600;
    }
    .text-divider {
        margin: 20px 0; font-size: 13px; color: #999;
        position: relative; display: flex; align-items: center; justify-content: center;
    }
    .text-divider::before, .text-divider::after {
        content: ''; height: 1px; background-color: #ddd; position: absolute; top: 50%; width: 40%;
    }
    .text-divider::before { left: 0; }
    .text-divider::after { right: 0; }
    .text-divider span { background: #fff; padding: 0 10px; z-index: 1; }
</style>

<div>
    {{#error}}
        <div class="alert alert-danger py-2" style="font-size: 13px; text-align: left;">
            <i class="fa fa-exclamation-circle me-1"></i> {{{ error }}}
        </div>
    {{/error}}

    <form action="{{{ actionurl }}}" method="post" id="login" class="text-start">
        <input type="hidden" name="logintoken" value="{{logintoken}}">

        <div class="mb-3">
            <label for="username">Tài khoản</label>
            <input type="text" name="username" id="username" class="form-control" value="{{username}}" placeholder="B21DCCN140" autocomplete="username">
        </div>

        <div class="mb-3">
            <label for="password">Mật khẩu</label>
            <input type="password" name="password" id="password" class="form-control" placeholder="••••••••" autocomplete="current-password">
        </div>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="rememberusername" id="rememberusername" value="1" {{#rememberusername}}checked{{/rememberusername}}>
                <label class="form-check-label" for="rememberusername">Ghi nhớ</label>
            </div>
            <a href="{{{ forgotpasswordurl }}}" class="forgot-password-link">Quên mật khẩu?</a>
        </div>

        <button type="submit" class="btn btn-login" id="loginbtn">Đăng nhập</button>

        <div class="text-divider"><span>Hoặc đăng nhập với</span></div>

        {{#hasidentityproviders}}
            {{#identityproviders}}
                <a href="{{{ url }}}" class="btn-microsoft mb-2">
                    <i class="fa-brands fa-microsoft me-2"></i> {{{ name }}}
                </a>
            {{/identityproviders}}
        {{/hasidentityproviders}}

        {{^hasidentityproviders}}
             <a href="#" class="btn-microsoft">
                <i class="fa-brands fa-microsoft me-2"></i> PTIT Microsoft Office 365
            </a>
        {{/hasidentityproviders}}
    </form>
</div>