<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/aigrading/db" VERSION="20240501" COMMENT="Bảng lưu trữ hàng đợi và kết quả chấm điểm AI"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="local_aigrading_tasks" COMMENT="Hàng đợi các bài nộp cần AI chấm và kết quả trả về">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="assignmentid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="ID của assignment (bảng assign)"/>
        <FIELD NAME="submissionid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="ID của bài nộp (bảng assign_submission)"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="ID của học sinh"/>
        
        <FIELD NAME="status" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="0: Pending, 1: Processing, 2: Success, 3: Failed"/>
        <FIELD NAME="error_message" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Ghi lại lỗi nếu status = 3"/>

        <FIELD NAME="ai_response_raw" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Toàn bộ JSON raw trả về từ Gemini"/>
        <FIELD NAME="parsed_grade" TYPE="number" LENGTH="10" DECIMALS="5" NOTNULL="false" SEQUENCE="false" COMMENT="Điểm số AI chấm"/>
        <FIELD NAME="parsed_feedback" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Nhận xét của AI"/>
        
        <FIELD NAME="teacher_grade" TYPE="number" LENGTH="10" DECIMALS="5" NOTNULL="false" SEQUENCE="false" COMMENT="Điểm chốt của giáo viên"/>
        <FIELD NAME="teacher_feedback" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Nhận xét chốt của giáo viên"/>
        <FIELD NAME="teacher_notes" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Ghi chú riêng về lỗi của AI để cải thiện model"/>

        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="assignment_idx" TYPE="foreign" FIELDS="assignmentid" REFTABLE="assign" REFFIELDS="id"/>
        <KEY NAME="submission_idx" TYPE="foreign" FIELDS="submissionid" REFTABLE="assign_submission" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="status_idx" UNIQUE="false" FIELDS="status" COMMENT="Giúp tìm nhanh các task đang pending"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>