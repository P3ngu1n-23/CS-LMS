<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/aigrading/db" VERSION="20240501" COMMENT="AI Grading Queue"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="local_aigrading_tasks" COMMENT="Hàng đợi chấm điểm">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="assignmentid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="submissionid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        
        <FIELD NAME="status" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="error_message" TYPE="text" NOTNULL="false" SEQUENCE="false"/>

        <FIELD NAME="secret_token" TYPE="char" LENGTH="64" NOTNULL="false" SEQUENCE="false" COMMENT="Token duy nhất cho mỗi request"/>

        <FIELD NAME="ai_response_raw" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="parsed_grade" TYPE="number" LENGTH="10" DECIMALS="5" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="parsed_feedback" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        
        <FIELD NAME="teacher_grade" TYPE="number" LENGTH="10" DECIMALS="5" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="teacher_feedback" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="teacher_notes" TYPE="text" NOTNULL="false" SEQUENCE="false"/>

        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="assignment_idx" TYPE="foreign" FIELDS="assignmentid" REFTABLE="assign" REFFIELDS="id"/>
      </KEYS>
    </TABLE>

    <TABLE NAME="local_aigrading_config" COMMENT="Cấu hình AI cho từng Assignment">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="assignmentid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        
        <FIELD NAME="enable_autograde" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="1 = Tự động chấm khi hết hạn nộp"/>
        <FIELD NAME="reference_text" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Nội dung đáp án mẫu dạng text"/>
        <FIELD NAME="teacher_instruction" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Hướng dẫn cụ thể của giáo viên cho AI"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="assignment_idx" TYPE="foreign" FIELDS="assignmentid" REFTABLE="assign" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>